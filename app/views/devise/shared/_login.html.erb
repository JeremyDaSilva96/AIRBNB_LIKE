<div class="container">
  <div class="row justify-content-center my-4">
    <div class="col-md-8">
      <div class="card-body">
        <h2 class="text-center mb-4">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
            <div class="d-flex justify-content-between">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="d-flex justify-content-between">
              <div class="d-flex justify-content-start gap-2">
                <button type="button" class="form-link" data-bs-toggle="modal" data-bs-target="#reg-modal">
                  <i class="fas fa-user-plus"></i> Sign up
                </button>
                <button type="button" class="form-link" data-bs-toggle="modal" data-bs-target="#forpass-modal">
                  <i class="fas fa-key"></i> Forgot your password?
                </button>
              </div>
              <%= f.button :submit, "Log in", class: "brown-button" do %>
                <i class="fas fa-sign-in-alt"></i> Log in
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
