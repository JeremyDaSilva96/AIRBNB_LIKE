<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8">
      <div class="card-body mb-4">
        <h2 class="text-center mb-4">Update your Profil</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-group">
            <%= f.input :first_name,
                          label: "First Name",
                          required: true,
                          autofocus: true,
                          input_html: { class: "form-control", autocomplete: "first_name" } %>
          </div>
          <div class="form-group">
            <%= f.input :last_name,
                          label: "Last Name",
                          required: true,
                          input_html: { class: "form-control", autocomplete: "last_name" } %>
          </div>
          <div class="form-group">
            <%= f.input :email,
                          label: "Email",
                          required: true,
                          autofocus: true,
                          input_html: { class: "form-control" } %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p class="text-muted">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.input :password,
                          label: "New Password",
                          hint: "Leave it blank if you don't want to change it",
                          required: false,
                          input_html: { class: "form-control", autocomplete: "new-password" } %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation,
                          label: "Confirm New Password",
                          required: false,
                          input_html: { class: "form-control", autocomplete: "new-password" } %>
          </div>
          <div class="form-group">
            <%= f.input :current_password,
                          label: "Current Password",
                          hint: "We need your current password to confirm your changes",
                          required: true,
                          input_html: { class: "form-control", autocomplete: "current-password" } %>
          </div>
          <div class="d-flex justify-content-between mt-3">
            <%= link_to "Back", root_path, class: "btn btn-primary button" %>
            <div class="d-flex gap-5">
              <%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger button text-white" %>
              <%= f.button :submit, "Update", class: "btn btn-primary button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
