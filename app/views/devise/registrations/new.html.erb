<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8">
      <div class="card-body mb-4">
        <h2 class="text-center mb-4">Create an account</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-group">
            <%= f.input :first_name,
                          label: "First Name",
                          required: true,
                          autofocus: true,
                          input_html: { class: "form-control", autocomplete: "first_name" } %>
          </div>
          <div class="form-group">
            <%= f.input :last_name,
                          label: "Last Name",
                          required: true,
                          input_html: { class: "form-control", autocomplete: "last_name" } %>
          </div>
          <div class="form-group">
            <%= f.input :email,
                          label: "Email",
                          required: true,
                          autofocus: true,
                          input_html: { class: "form-control", autocomplete: "email" } %>
          </div>
          <div class="form-group">
            <%= f.input :password,
                          label: "Password",
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { class: "form-control", autocomplete: "new-password" } %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation,
                          label: "Confirm Password",
                          required: true,
                          input_html: { class: "form-control", autocomplete: "new-password" } %>
          </div>
          <div class="d-flex justify-content-between mt-4">
            <%= render "devise/shared/links" %>
            <%= f.button :submit, "Sign up", class: "form-button w-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
