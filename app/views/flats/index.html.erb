<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-5">
      <%= form_with url: flats_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control ",  # Added Bootstrap spacing class
            placeholder: "Type a keyword"
        %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary round" %>
      <% end %>
    </div>
  </div>
  <!-- Flats List -->
  <div class="row mt-1">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if flat.image_url.present? %>
            <%= image_tag(flat.image_url, style: "height: 240px; object-fit: cover;", class: "card-img-top", alt: flat.title) %>
          <% end %>
          <div class="card-body d-flex flex-column g">
            <h5 class="card-title my-4"><%= flat.title %></h5>
            <p class="card-text"><%= flat.address %></p>
            <div class="d-flex gap-1">
              <p class="card-text"><%= flat.city %>, </p>
              <p class="card-text"><%= flat.country %></p>
            </div>
            <p class="card-text b-4"><%= flat.description %></p>
            <div class="d-flex justify-content-start gap-4">
              <p class="card-text">
                <i class="fas fa-users"></i> <%= flat.number_of_guests %>
              </p>
              <p class="card-textgap 4">
                <i class="fas fa-dollar-sign"></i> <%= flat.price_per_night %>
              </p>
            </div>
            <div class="d-flex justify-content-center">
              <a href="#" class="btn btn-primary mt-auto w-50 round">View Details</a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
