<!--banner-->
<div class="banner banner-relative mb-5">
  <% if @flat.photo.attached? %>
    <!--cloudinary-->
    <%= cl_image_tag @flat.photo.key, alt: "#{@flat.title} - image of the apartment", class: "banner-img img-fluid", crop: :thumb, gravity: :face %>
    <!--cloudinary-->
  <% else %>
    <!--unsplash-->
    <%#= image_tag(@flat.image_url, alt: "#{@flat.title} - image of the apartment", class: "banner-img img-fluid") %>
    <!--unsplash-->
  <% end %>
  <h1 class="banner-title card-title my-4"><%= @flat.title %></h1>
  <div class="banner-text card-body d-flex flex-column">
    <p><%= @flat.description %></p>
    <div class="d-flex gap-1">
      <p class="card-text"><%= @flat.address %></p>
      <p class="card-text"><%= @flat.country %></p>
      <p class="card-text"><%= @flat.city %></p>
    </div>
    <div class="d-flex justify-content-start gap-4">
      <p class="card-text">
        <i class="fas fa-users"></i> <%= @flat.number_of_guests %>
      </p>
      <p class="card-text gap-4">
        <i class="fas fa-dollar-sign"></i> <%= @flat.price_per_night %>
      </p>
    </div>
  </div>
</div>
<!--banner-->
<!--body-->
<div class="container">
  <div class="row">
    <% 6.times do %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if @flat.photo.attached? %>
            <!--cloudinary-->
            <%= cl_image_tag @flat.photo.key, class: "banner-img img-fluid", crop: :thumb, gravity: :face %>
            <!--cloudinary-->
          <% else %>
            <!--unsplash-->
            <%= image_tag(@flat.image_url, class: "images", alt: @flat.title) %>
            <!--unsplash-->
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="d-flex justify-content-end gap-4 my-4">
      <%= link_to "Back", flats_path, class: "btn btn-primary button" %>
      <%= link_to "Book it!", flats_path, class: "btn btn-primary button" %>
    </div>
  </div>
</div>
<!--body-->
