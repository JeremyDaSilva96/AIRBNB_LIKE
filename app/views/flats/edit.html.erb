<!-- app/views/flats/new.html.erb -->
<!--banner-->
<div class="banner banner-relative mb-5">
  <%= image_tag "banner.png", alt: "banner of the website", class: "banner-img img-fluid" %>
  <h1 class="banner-title card-title my-4">Modify informations</h1>
</div>
<!--banner-->
<!--form-->
<div class="container mb-4">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8">
      <div class="card-body">
        <%= simple_form_for @flat do |f| %>
          <%= f.input :title %>
          <%= f.input :address %>
          <%= f.input :city %>
          <%= f.input :country, as: :select, collection: country_select_options %>
          <%= f.input :zip_code %>
          <%= f.input :description %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.input :price_per_night %>
          <%= f.input :number_of_guests %>
          <div class="d-flex justify-content-between mt-2">
            <%= link_to "Back", flats_path, class: "btn btn-primary button" %>
            <div class="d-flex justify-content-end gap-4">
              <%= link_to "Delete", flat_path(@flat), class: "btn btn-danger button text-white", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              <%= f.submit "Submit", class: "btn btn-primary button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!--form-->
